{
  "name": "yellow-snow",
  "displayName": "Yellow Snow",
  "description": "See where your fellow developers left their mark",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jchown/yellow-snow-vscode.git"
  },
  "publisher": "ShowroomDummies",
  "version": "0.12.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yellowSnow.openView",
        "title": "Open in Yellow Snow"
      }
    ],
    "customEditors": [
      {
        "viewType": "yellowSnow.viewType",
        "displayName": "Yellow Snow",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Yellow Snow",
      "properties": {
        "yellowSnow.theme": {
          "type": "string",
          "default": "AUTO",
          "enum": [
            "AUTO",
            "YS",
            "PS"
          ],
          "enumItemLabels": [
            "Auto",
            "Yellow Snow",
            "Purple Stain"
          ],
          "enumDescriptions": [
            "Select between 'light' and 'dark' color schemes based on the current theme",
            "White to yellow 'light' color scheme",
            "Black to purple 'dark' color scheme"
          ]
        },
        "yellowSnow.timelineMode": {
          "type": "string",
          "default": "SHOWN",
          "enum": [
            "SHOWN",
            "HIDDEN",
            "DISABLED"
          ],
          "enumItemLabels": [
            "Shown by default",
            "Hidden by default",
            "Always hidden"
          ],
          "enumDescriptions": [
            "Show the timeline by default, but allow it to be hidden",
            "Hide the timeline by default, but allow it to be shown",
            "Always hide the timeline"
          ]
        }
      }
    },
    "keybindings": [
      {
        "command": "yellowSnow.openView",
        "key": "ctrl+y",
        "mac": "cmd+y"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  } 
}
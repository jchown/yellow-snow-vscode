{
  "name": "yellow-snow",
  "displayName": "Yellow Snow",
  "description": "See where your fellow developers left their mark",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jchown/yellow-snow-vscode.git"
  },
  "publisher": "ShowroomDummies",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "yellowSnow.viewType",
        "displayName": "Yellow Snow",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Yellow Snow",
      "properties": {
        "yellowSnow.theme": {
          "type": "string",
          "default": "YS",
          "enum": [
            "YS",
            "PS"
          ],
          "enumItemLabels": [
            "Yellow Snow",
            "Purple Stain"
          ],
          "enumDescriptions": [
            "White to yellow 'light' color scheme",
            "Black to purple 'dark' color scheme"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}